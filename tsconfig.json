{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "allowJs": true,
    "sourceMap": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*",
    "samples/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
